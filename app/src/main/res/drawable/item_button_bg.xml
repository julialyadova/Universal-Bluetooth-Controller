<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape>
      <solid android:color="#00000000" />
      <padding
          android:bottom="4dp"
          android:left="4dp"
          android:right="4dp"
          android:top="6dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid android:color="#8b8b8b" />
      <corners android:radius="8dp" />
      <padding
          android:bottom="6dp"
          android:left="0dp"
          android:right="1dp"
          android:top="-2dp" />
    </shape>
  </item>
  <item android:id="@+id/item_bg_layout">
    <shape>
      <solid android:color="#FFFFFF" />
      <corners android:radius="8dp" />
    </shape>
  </item>
</layer-list>